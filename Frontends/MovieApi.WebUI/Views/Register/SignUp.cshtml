@model CreateUserRegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Yeni Kullanıcı Kayıt</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-31/css/roboto-font.css">
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-31/fonts/font-awesome-5/css/fontawesome-all.min.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-31/css/style.css" />
</head>
<body class="form-v5">
	<div class="page-content">
		<div class="form-v5-content">
			<form class="form-detail" method="post">
				<h2>Movie Api Yeni Kullanıcı Kayıt</h2>
				<h1>@ViewBag.RegisterError</h1>
				<div class="form-row">
					<label>Adınız</label>
					<input type="text" asp-for="Name" class="input-text" placeholder="isim..." required>
					<i class="fas fa-user"></i>
				</div>
				<div class="form-row">
					<label>Soy Adınız</label>
					<input type="text" asp-for="Surname" class="input-text" placeholder="soy isim..." required>
					<i class="fas fa-heart"></i>
				</div>
				<div class="form-row">
					<label>Kullanıcı Adınız</label>
					<input type="text" asp-for="Username" class="input-text" placeholder="kullanıcı adı..." required>
					<i class="fas fa-star"></i>
				</div>
				<div class="form-row">
					<label for="your-email">Mail Adresiniz</label>
					<input type="text" asp-for="Email" class="input-text" placeholder="text@example.com" required>
					<i class="fas fa-envelope"></i>
				</div>
				<div class="form-row">
					<label for="password">Şifreniz</label>
					<input type="password" asp-for="Password" class="input-text" placeholder="******" required>
					@* <i class="fas fa-lock"></i> *@
				</div>
				<div class="form-row-last">
					<input type="submit" class="register" value="Kayıt Oluştur">
				</div>
			</form>
		</div>
	</div>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>